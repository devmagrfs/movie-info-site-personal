{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": "./",
    "lib": ["es2015", "dom", "dom.iterable"],
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
